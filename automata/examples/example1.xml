<?xml version="1.6"?>
<!-- Тег automata является корневым тегом
Атрибуты: actions - путь к скрипту Python, содержащему инструкции по загрузке объекта, реализующего внедренные действия,
sstate - начальное состояние автомата -->
<automaton start_state="q0">
  <!-- Описание состояний автомата -->
  <states>
    <!-- обычное состояние -->>
    <s>q1</s>
    <s>q2</s>
    <!-- конечное состояние -->>
    <s>q3</s>
    <s>q0</s>
  </states>
  <!-- Описание лексем/символов алфавита -->
  <tokens>
    <!-- Лексемы/символы объединяются в группы -->
    <!-- Группы не должны пересекаться -->
    <tg name="alpha">
      <t>a</t>
      <t>b</t>
      <t>c</t>
      <!-- ... -->
      <t>z</t>
    </tg>
    <!-- Пустая группа в описании означает, что группа содержит только лексему/символ, являющийся именем группы -->
    <tg name="&#xa;"/>
  </tokens>
  <!-- Описание переходов -->
  <transitions>
    <!-- Описание перехода содержит атрибуты:
	 start - начальное состояние перехода;
	 token - имя группы(sic) лексем/символов;
	 action - имя внедренного действия (может быть пустым);
	 end - состояние, в которое автомат переходит
    -->
    <tr start="q1" token="alpha" action="do_something" end="q2"/>
    <tr start="q1" token="&#xa;" action="" end="q0"/>
    <!-- Переход по конечному символу, завершающий работу автомата,
	 должен иметь token="", end=""
	 В автомате должен быть хотя бы один такой переход -->
    <tr start="q2" token="" action="" end=""/>
  </transitions>
</automaton>
